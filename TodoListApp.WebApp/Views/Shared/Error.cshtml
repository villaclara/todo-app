@model ErrorViewModel

@{
    ViewBag.Title = "Error";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-danger">An error occurred</h2>

            <p class="card-text">
                <strong>Request ID:</strong> @Model.RequestId
            </p>

            <a href="@Model.ReturnUrl" class="btn btn-primary">
                Go Back
            </a>
        </div>
    </div>
</div>