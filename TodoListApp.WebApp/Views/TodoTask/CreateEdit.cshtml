@model TodoTaskViewModel
@{
    ViewData["ActiveSection"] = "Task";
}

<div class="container py-4">
    <div class="card shadow-light rounded p-3 mb-3 col-md-8">

        <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="mb-3">Task Form</h2>

            @if (Model.Id != 0)
            {
                <div>
                    <a class="btn btn-danger"
                       asp-controller="TodoTask"
                       asp-action="Delete"
                       asp-route-id="@Model.Id"
                       asp-route-listId="@Model.TodoListId">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
                </div>
            }
        </div>

        <form asp-controller="TodoTask" asp-action="CreateEdit" method="post" class="needs-validation" novalidate>
            <!-- Hidden Id field -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TodoListId" />

            <div class="mb-3 col-md-12">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control shadow-sm rounded border-0" placeholder="Enter task title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            @* TaskStatus is shown only if editing an existing task *@
            @if (Model.Id != 0)
            {
                <div class="mb-3 col-md-12">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <select asp-for="Status" class="form-select shadow-sm rounded border-0">
                        <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="AssigneeId" />
                <input type="hidden" asp-for="AssigneeName" />
            }

            <div class="mb-3 col-md-12">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" rows="2" class="form-control shadow-sm rounded border-0" placeholder="Enter task description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* Assignee is shown only if editing an existing task *@
            @if (Model.Id != 0)
            {
                <div class="mb-3 col-md-12">
                    <label asp-for="AssigneeName" class="form-label fw-bold"></label>
                    <input asp-for="AssigneeName" class="form-control shadow-sm rounded border-0" placeholder="Enter assignee name" />
                    <span asp-validation-for="AssigneeName" class="text-danger"></span>
                </div>
            }

            <div class="mb-3 col-md-12">
                <label asp-for="DueToDate" class="form-label fw-bold"></label>
                <input asp-for="DueToDate" type="date" class="form-control shadow-sm rounded border-0" />
                <span asp-validation-for="DueToDate" class="text-danger"></span>
            </div>

            <!-- âœ… Tags Section -->
            <div class="mb-3 col-md-12">
                <label class="form-label fw-bold">Tags</label>

                <!-- Active tags as badges -->
                <div class="d-flex flex-wrap gap-2 mb-2">
                    @if (Model.TagList != null && Model.TagList.Any())
                    {
                        foreach (var tag in Model.TagList)
                        {
                            <span class="badge bg-primary rounded-pill px-3 py-2">
                                    @tag.Title
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No tags selected</span>
                    }
                </div>

                <!-- Collapsible tag selector -->
                <button class="btn btn-sm btn-outline-secondary mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#tagsCollapse" aria-expanded="false" aria-controls="tagsCollapse">
                    Select Tags
                </button>

                <div class="collapse" id="tagsCollapse">
                    <div class="card card-body shadow-sm border-0">
                        @foreach (var tag in (IEnumerable<TodoTaskTag>)ViewBag.AvailableTags)
                        {
                            <div class="form-check mb-1">
                                <input type="checkbox"
                                       name="SelectedTagIds"
                                       value="@tag.Id"
                                       class="form-check-input"
                                       @(ViewBag.SelectedTagIds != null &&
                                                                          ((List<int>)ViewBag.SelectedTagIds).Contains(tag.Id)
                                                                          ? "checked"
                                                                          : "") />
                            <label class="form-check-label">@tag.Title</label>
                        </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary shadow-sm rounded px-4">
                    <i class="bi bi-floppy me-1"></i> Save Task
                </button>
                <a asp-action="Details" asp-controller="TodoList" asp-route-listId="@Model.TodoListId" class="btn btn-outline-secondary shadow-sm rounded px-4">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd !important;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
    }

    .form-control,
    .form-select{
        background-color: #2d3748 !important;
    }

