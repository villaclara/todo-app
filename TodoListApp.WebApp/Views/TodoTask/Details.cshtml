@model TodoTaskViewModel
@{
    var isCurrentUserOwner = (bool)ViewData["isCurrentUserTaskOwner"]!;
    ViewData["ActiveSection"] = isCurrentUserOwner ? "List" : "Task";
}


<div class="container py-4">
    <div class="card shadow-light rounded p-4 col-md-10" style="max-width: 900px;">

        <div class="d-flex justify-content-between align-items-start mb-4">

            <!-- Left side -->
            <div class="d-flex flex-column gap-2 align-items-start">
                <a href="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm w-auto">
                    <i class="bi bi-arrow-left-short"></i>
                    Back to List
                </a>
                <h2 class="mb-0">Task Details</h2>
            </div>

            <!-- Right side (stacked buttons) -->
            <div class="d-flex flex-column gap-2">
                @if (isCurrentUserOwner)
                {
                    
                @if (Model.Status != TodoTaskStatus.Completed)
                {
                    <a asp-controller="TodoTask" asp-action="CreateEdit" asp-route-id="@Model.Id" asp-route-listId="@Model.TodoListId" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pen"></i> Edit
                    </a>
                }

                <a asp-controller="TodoTask" asp-action="Delete" asp-route-id="@Model.Id" asp-route-listId="@Model.TodoListId" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash3"></i> Delete
                </a>
                }


            </div>
        </div>


        <div class="row g-4">
            @using TodoListApp.Common.Models.Enums
            <div class="mb-3 d-flex">
                <h5 class="fw-bold mx-3">Status</h5>

                @if (Model.Status == TodoTaskStatus.Completed)
                {
                    <!-- Completed status, no dropdown -->
                    <span class="badge bg-success fs-6">@Model.Status</span>
                }
                else
                {
                    <!-- NotStarted or InProgress: show dropdown -->
                    <div class="dropdown">
                        <button class="badge border-0
                                    @(Model.Status == TodoTaskStatus.InProgress ? "bg-primary" : "bg-secondary") fs-6 dropdown-toggle"
                                type="button" id="statusDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            @Model.Status
                        </button>

                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="statusDropdown">
                            @if (Model.Status == TodoTaskStatus.NotStarted)
                            {
                                <li>
                                    <form method="post" asp-action="UpdateStatus" asp-controller="TodoTask">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="listId" value="@Model.TodoListId" />
                                        <input type="hidden" name="status" value="@TodoTaskStatus.InProgress" />
                                        <button type="submit" class="dropdown-item d-flex justify-content-between align-items-center">
                                            <span class="pe-2">Start Task</span>
                                            <span class="d-flex align-items-center gap-1">
                                                <i class="bi bi-arrow-right"></i>
                                                <span class="bg-primary px-2 rounded">In Progress</span>
                                            </span>
                                        </button>
                                    </form>
                                </li>
                            }
                            else if (Model.Status == TodoTaskStatus.InProgress)
                            {
                                <li>
                                    <form method="post" asp-action="UpdateStatus" asp-controller="TodoTask">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="listId" value="@Model.TodoListId" />
                                        <input type="hidden" name="status" value="@TodoTaskStatus.NotStarted" />
                                        <button type="submit" class="dropdown-item d-flex justify-content-between align-items-center">
                                            <span class="d-flex align-items-center gap-1">
                                                <span class="pe-2">Postpone Task</span>
                                                <i class="bi bi-arrow-right"></i>
                                            </span>
                                            <span class="bg-secondary px-2 rounded">Not Started</span>
                                        </button>

                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-action="UpdateStatus" asp-controller="TodoTask">
                                        <input type="hidden" name="id" value="@Model.Id" />
                                        <input type="hidden" name="listId" value="@Model.TodoListId" />
                                        <input type="hidden" name="status" value="@TodoTaskStatus.Completed" />
                                        <button type="submit" class="dropdown-item d-flex justify-content-between align-items-center">
                                            <span class="pe-2">Finish Task</span>
                                            <span class="d-flex align-items-center gap-1">
                                                <i class="bi bi-arrow-right"></i>
                                                <span class="bg-success px-2 rounded">Completed</span>
                                            </span>
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <!-- Left Column: Task Info -->
            <div class="col-md-6">

                <!-- Title -->
                <div class="mb-3">
                    <div class="text-muted fs-6 mb-1 fw-bold">
                        <i class="bi bi-card-text me-1"></i>Title:
                    </div>
                    <div class="fs-5">@Model.Title</div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <div class="text-muted fs-6 mb-1 fw-bold">
                        <i class="bi bi-pencil-square me-1"></i>Description:
                    </div>
                    <div class="fs-6">
                        @(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "No description")
                    </div>
                </div>

                <!-- Tags -->
                @if (Model.TagList != null && Model.TagList.Any())
                {
                    <div class="mb-3">
                        <div class="text-muted fs-6 mb-1 fw-bold">
                            <i class="bi bi-tags me-1"></i>Tags:
                        </div>
                        <div class="d-flex flex-wrap align-items-center">
                            @foreach (var tag in Model.TagList)
                            {
                                <span class="badge badge-tag rounded-pill text-light opacity-100 me-1 mb-1">
                                    @tag.Title
                                </span>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column: Status & Assignee -->
            <div class="col-md-6">

                <!-- Assignee -->
                <div class="mb-3">
                    <div class="text-muted fs-6 mb-1 fw-bold">
                        <i class="bi bi-person me-1"></i>Assignee:
                    </div>
                    <div class="fs-6">@Model.AssigneeName (@Model.AssigneeId)</div>
                </div>

                <!-- Created Date -->
                <div class="mb-3">
                    <div class="text-muted fs-6 mb-1 fw-bold">
                        <i class="bi bi-calendar-event me-1"></i>Created Date:
                    </div>
                    <div class="fs-6">
                        @((Model.CreatedAtDate == default) ? "No date" : Model.CreatedAtDate.ToString("MMM dd, yyyy"))
                    </div>
                </div>

                <!-- Due Date -->
                <div class="mb-3">
                    <div class="text-muted fs-6 mb-1 fw-bold">
                        <i class="bi bi-calendar2-check me-1"></i>Due Date:
                    </div>
                    <div class="fs-6">
                        @((Model.DueToDate == default) ? "No due date" : Model.DueToDate.ToString("MMM dd, yyyy"))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 border-top pt-2 col-md-10" style="max-width: 900px">
        <form method="post" asp-controller="TodoTask" asp-action="AddComment">
            <!-- Hidden field for task id if needed -->
            <input type="hidden" name="taskId" value="@Model.Id" />
            <input type="hidden" name="listId" value="@Model.TodoListId" />

            <!-- Input field -->
            <div class="input-group input-group-sm">
                <textarea type="text" name="Text" id="commentInput" class="form-control" rows="2" placeholder="Write a comment..." required ></textarea>
                <button type="submit" class="btn btn-outline-info">
                    <i class="bi bi-plus-circle me-1"></i> Add Comment
                </button>
            </div>
        </form>


        <div class="mt-3">

        @if (Model.CommentsList != null && Model.CommentsList.Any())
        {


            <h6 class="small text-secondary mb-2">
                <i class="bi bi-chat-left-text me-1"></i> Comments (@Model.CommentsList.Count())
            </h6>

            <div class="list-group list-group-flush">
                @foreach (var comment in Model.CommentsList.OrderByDescending(c => c.DatePosted))
                {
                    <div class="list-group-item p-2 border-0 rounded mt-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>@comment.UserName</strong>
                                <span class="text-muted small">Â· @comment.DatePosted.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>

                            <div class="my-auto">
                            @if (comment.UserId == 1)
                                {
                                    <a asp-controller="TodoTask" asp-action="CreateEdit" asp-route-id="@Model.Id" asp-route-listId="@Model.TodoListId" class="btn btn-outline-primary btn-sm me-2">
                                        <i class="bi bi-pen"></i>
                                    </a>
                                }
                                    <a asp-controller="TodoTask" asp-action="DeleteComment" asp-route-id="@comment.Id" asp-route-listId="@Model.TodoListId" asp-route-taskId="@Model.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                            </div>
                        </div>
                        <p class="mb-0 small text-muted">@comment.Text</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="small text-muted mb-0"><i class="bi bi-chat-left-text me-1"></i> No comments yet.</p>
        }
        </div>

    </div>
</div>

<style>
    .card {
        background-color: #ffffff;
        border-radius: 1rem;
    }

    h5.fw-bold {
        margin-bottom: 0.25rem;
        color: inherit; /* remove primary color */
    }

    p {
        margin-bottom: 0.75rem;
        color: #495057;
    }

    .badge {
        padding: 0.5em 0.75em;
        font-size: 0.9rem;
    }

    @@media (max-width: 767px) {
        .row.g-4 {
            flex-direction: column;
        }
    }

    .shadow-light {
        box-shadow: 0 0.5rem 1rem rgba(255, 255, 255, 0.15) !important;
        background-color: #1f2937 !important
    }

</style>
