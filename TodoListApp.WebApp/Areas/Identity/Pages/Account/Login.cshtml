@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center mt-5 mx-3">
    <form id="account" method="post" class="p-4 rounded shadow-lg shadow-light" style="width: 100%; max-width: 400px;">

        <h3 class="text-center mb-4">Log in</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">Log in</button>

        <div class="text-center">
            <p class="mb-1"><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
            <hr />
            <p class="mb-0"><a asp-page="./Register" class="text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
